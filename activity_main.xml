<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/label_Humidity"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="28dp"
        android:text="Humidity"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_Suhu" />

    <TextView
        android:id="@+id/label_Suhu"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="32dp"
        android:text="Suhu"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtView_valueHumi"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/label_Servo"
        app:layout_constraintTop_toTopOf="@+id/label_Humidity" />

    <TextView
        android:id="@+id/txtView_valueSuhu"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/label_Humidity"
        app:layout_constraintTop_toTopOf="@+id/label_Suhu" />

    <TextView
        android:id="@+id/label_Servo"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:text="Servo"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_Humidity" />

    <TextView
        android:id="@+id/txtView_valueServo"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/label_Humidity"
        app:layout_constraintTop_toTopOf="@+id/label_Servo" />

    <ToggleButton
        android:id="@+id/toggleButton_switch"
        android:layout_width="195dp"
        android:layout_height="71dp"
        android:layout_marginTop="64dp"
        android:text="ToggleButton"
        app:layout_constraintTop_toBottomOf="@+id/txtView_valueServo"
        tools:layout_editor_absoluteX="108dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>